export default function Home() {
  const [selectedProduct, setSelectedProduct] = useState<any | null>(null);
  const [filter, setFilter] = useState('All');
  const [subFilter, setSubFilter] = useState('All');
  const [isCartOpen, setIsCartOpen] = useState(false);
  const [isCheckoutOpen, setIsCheckoutOpen] = useState(false);
  const [isOrdersOpen, setIsOrdersOpen] = useState(false);
  const { addToCart, totalItems, orders } = useCart();

  const handleMainFilterChange = (newFilter: string) => {
    setFilter(newFilter);
    setSubFilter('All');
  };

  const filteredProducts = useMemo(() => {
    return mockProducts.filter(p => {
      const matchesMain = filter === 'All' || p.gender === filter || (filter === 'Sales' && parseFloat(p.price.replace('$', '')) < 50);
      const matchesSub = subFilter === 'All' || p.category === subFilter;
      return matchesMain && matchesSub;
    });
  }, [filter, subFilter]);

  const activeCategory = mainCategories.find(c => c.name === filter);

  return (
    <main className="min-h-screen">
      <LandingIntro />
      
      {/* Navigation Header */}
      <header className="sticky top-0 z-40 w-full bg-white/80 backdrop-blur-md border-b border-muted px-4 md:px-8 py-4">
        <div className="max-w-7xl mx-auto flex items-center justify-between">
          <div className="flex items-center gap-8">
            <h1 className="text-3xl font-bold text-primary tracking-tighter cursor-pointer" onClick={() => handleMainFilterChange('All')}>BuyEasy</h1>
            <nav className="hidden md:flex items-center gap-6">
              {['Men', 'Women', 'Kids', 'Valentine', 'Sales'].map(nav => (
                <button 
                  key={nav} 
                  className={cn(
                    "font-semibold transition-colors",
                    filter === nav ? "text-primary" : "text-muted-foreground hover:text-primary"
                  )}
                  onClick={() => handleMainFilterChange(nav)}
                >
                  {nav === 'Valentine' ? 'ðŸ’– ' + nav : nav}
                </button>
              ))}
            </nav>
          </div>
          
          <div className="flex items-center gap-4">
            <div className="hidden sm:flex items-center bg-muted/50 rounded-full px-4 py-2 border border-transparent focus-within:border-primary transition-all">
              <Search size={18} className="text-muted-foreground" />
              <input type="text" placeholder="Search products..." className="bg-transparent border-none focus:ring-0 text-sm ml-2 w-48" />
            </div>
            <button className="p-2 text-muted-foreground hover:text-primary relative" onClick={() => setIsOrdersOpen(true)}>
              <Package size={24} />
              {orders.length > 0 && (
                <span className="absolute -top-1 -right-1 bg-primary text-white text-[8px] font-bold w-4 h-4 flex items-center justify-center rounded-full">
                  {orders.length}
                </span>
              )}
            </button>
            <button className="p-2 text-muted-foreground hover:text-primary relative" onClick={() => setIsCartOpen(true)}>
              <ShoppingCart size={24} />
              {totalItems > 0 && (
                <span className="absolute -top-1 -right-1 bg-accent text-white text-[10px] font-bold w-5 h-5 flex items-center justify-center rounded-full animate-scale-in shadow-lg">
                  {totalItems}
                </span>
              )}
            </button>
            <button className="p-2 text-muted-foreground hover:text-primary bg-primary/10 rounded-full"><User size={24} /></button>
          </div>
        </div>
      </header>

      {filter === 'All' && <BrandScroller />}

      <div className="max-w-7xl mx-auto pt-8 min-h-[70vh]">
        
        {/* Main Category Grid - Only show on home */}
        {filter === 'All' && (
          <section className="px-4 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
            {mainCategories.map((cat) => {
              const img = PlaceHolderImages.find(p => p.id === cat.id);
              return (
                <div 
                  key={cat.id}
                  className="group relative h-80 rounded-3xl overflow-hidden cursor-pointer shadow-xl"
                  onClick={() => handleMainFilterChange(cat.name)}
                >
                  <Image
                    src={img?.imageUrl || ''}
                    alt={cat.name}
                    fill
                    className="object-cover transition-transform duration-700 group-hover:scale-110"
                    data-ai-hint={cat.id.replace('-', ' ')}
                  />
                  <div className="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent" />
                  <div className="absolute bottom-6 left-6 text-white">
                    <h3 className="text-2xl font-bold">{cat.name}'s Fashion</h3>
                    <p className="text-sm opacity-90">{cat.desc}</p>
                    <div className="mt-2 flex items-center gap-1 text-xs font-bold text-primary opacity-0 group-hover:opacity-100 transition-opacity">
                      Shop Now <ChevronRight size={14} />
                    </div>
                  </div>
                </div>
              );
            })}
          </section>
        )}

        {/* Dynamic Sub-category Navigation */}
        {activeCategory && (
          <div className="px-4 mb-8 animate-in fade-in slide-in-from-top-2">
            <div className="flex items-center gap-4 mb-4">
              <button 
                onClick={() => handleMainFilterChange('All')}
                className="text-sm font-bold text-muted-foreground hover:text-primary"
              >
                Home
              </button>
              <ChevronRight size={14} className="text-muted-foreground" />
              <span className="text-sm font-bold text-primary">{activeCategory.name}</span>
            </div>
            
            <h2 className="text-4xl font-bold mb-6 flex items-center gap-3">
              {activeCategory.name === 'Valentine' && <Sparkles className="text-accent" />}
              {activeCategory.name === 'Valentine' ? "Valentine's Shop" : activeCategory.name + "'s Collection"}
            </h2>

            <div className="flex flex-wrap gap-3">
              <button
                onClick={() => setSubFilter('All')}
                className={cn(
                  "px-6 py-2 rounded-full text-sm font-bold transition-all border-2",
                  subFilter === 'All' 
                    ? "bg-primary border-primary text-white shadow-lg" 
                    : "bg-white border-muted text-muted-foreground hover:border-primary/50"
                )}
              >
                All {activeCategory.name}
              </button>
              {activeCategory.subcats.map(sub => (
                <button
                  key={sub}
                  onClick={() => setSubFilter(sub)}
                  className={cn(
                    "px-6 py-2 rounded-full text-sm font-bold transition-all border-2",
                    subFilter === sub 
                      ? "bg-accent border-accent text-white shadow-lg" 
                      : "bg-white border-muted text-muted-foreground hover:border-accent/50"
                  )}
                >
                  {sub}
                </button>
              ))}
            </div>
          </div>
        )}

        {filter === 'All' && <CategoryQuickLinks onSelect={(label) => setFilter(label)} />}

        {/* Product Listing */}
        <section className="px-4 py-12">
          <div className="flex items-center justify-between mb-8">
            <h2 className="text-3xl font-bold text-foreground">
              {filter === 'All' ? 'Popular Products' : `${subFilter === 'All' ? activeCategory?.name : subFilter} Featured`}
            </h2>
          </div>
          
          <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
            {filteredProducts.map((product) => (
              <div 
                key={product.id} 
                className="group flex flex-col bg-white rounded-3xl overflow-hidden shadow-sm hover:shadow-2xl transition-all duration-300 border border-muted/20 cursor-pointer"
                onClick={() => setSelectedProduct(product)}
              >
                <div className="relative aspect-[3/4] overflow-hidden bg-muted">
                  <Image
                    src={product.image}
                    alt={product.name}
                    fill
                    className="object-cover transition-transform duration-500 group-hover:scale-110"
                  />
                  <div className="absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity">
                    <button className="bg-white/80 backdrop-blur p-2 rounded-full text-accent hover:text-primary shadow-lg">
                      <Heart size={20} />
                    </button>
                  </div>
                </div>
                <div className="p-6">
                  <span className="text-accent text-xs font-bold uppercase tracking-widest">{product.category}</span>
                  <h3 className="text-lg font-bold mt-1 line-clamp-1">{product.name}</h3>
                  <div className="flex items-center justify-between mt-4">
                    <span className="text-xl font-bold text-primary">{product.price}</span>
                    <button 
                      className="bg-primary/10 hover:bg-primary text-primary hover:text-white px-4 py-2 rounded-full text-sm font-bold transition-colors"
                      onClick={(e) => {
                        e.stopPropagation();
                        addToCart(product);
                      }}
                    >
                      Quick Add
                    </button>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </section>
      </div>

      <ProductModal 
        product={selectedProduct} 
        isOpen={!!selectedProduct} 
        onClose={() => setSelectedProduct(null)} 
      />

      <CartSheet
        isOpen={isCartOpen}
        onClose={() => setIsCartOpen(false)}
        onCheckout={() => setIsCheckoutOpen(true)}
      />

      <CheckoutModal
        isOpen={isCheckoutOpen}
        onClose={() => setIsCheckoutOpen(false)}
      />

      <OrdersModal
        isOpen={isOrdersOpen}
        onClose={() => setIsOrdersOpen(false)}
      />
    </main>
  );
}


