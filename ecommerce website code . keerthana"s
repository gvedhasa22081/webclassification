use client";

import React, { createContext, useContext, useState, ReactNode, useEffect } from 'react';

export interface CartItem {
  id: string;
  name: string;
  price: string;
  image: string;
  category: string;
  quantity: number;
  size?: string;
}

export interface Order {
  id: string;
  items: CartItem[];
  total: number;
  date: string;
  deliveryEstimate: string;
  status: string;
  address: string;
  tracking: {
    status: string;
    location: string;
    timestamp: string;
    updates: { status: string; location: string; time: string; desc: string }[];
  };
}

interface CartContextType {
  cart: CartItem[];
  orders: Order[];
  addToCart: (product: any, size?: string) => void;
  removeFromCart: (productId: string, size?: string) => void;
  clearCart: () => void;
  placeOrder: (address: string, paymentMethod: string, customItems?: CartItem[]) => void;
  cancelOrder: (orderId: string) => void;
  totalItems: number;
  totalPrice: number;
}

const CartContext = createContext<CartContextType | undefined>(undefined);

export function CartProvider({ children }: { children: ReactNode }) {
  const [cart, setCart] = useState<CartItem[]>([]);
  const [orders, setOrders] = useState<Order[]>([]);

  // Load orders from localStorage on mount
  useEffect(() => {
    const savedOrders = localStorage.getItem('buyeasy_orders');
    if (savedOrders) {
      try {
        setOrders(JSON.parse(savedOrders));
      } catch (e) {
        console.error("Failed to load orders", e);
      }
    }
  }, []);

  const addToCart = (product: any, size?: string) => {
    setCart((prevCart) => {
      const existingItemIndex = prevCart.findIndex(
        (item) => item.id === product.id && item.size === size
      );

      if (existingItemIndex > -1) {
        const newCart = [...prevCart];
        newCart[existingItemIndex].quantity += 1;
        return newCart;
      }

      return [...prevCart, { ...product, quantity: 1, size }];
    });
  };

  const removeFromCart = (productId: string, size?: string) => {
    setCart((prevCart) => {
      const existingItemIndex = prevCart.findIndex(
        (item) => item.id === productId && item.size === size
      );

      if (existingItemIndex > -1) {
        const newCart = [...prevCart];
        if (newCart[existingItemIndex].quantity > 1) {
          newCart[existingItemIndex].quantity -= 1;
          return newCart;
        }
        return newCart.filter((_, i) => i !== existingItemIndex);
      }
      return prevCart;
    });
  };

  const clearCart = () => setCart([]);

  const placeOrder = (address: string, paymentMethod: string, customItems?: CartItem[]) => {
    const itemsToOrder = customItems || [...cart];
    
    if (itemsToOrder.length === 0) return;

    const orderTotal = itemsToOrder.reduce((acc, item) => {
      const priceString = typeof item.price === 'string' ? item.price : '0';
      const price = parseFloat(priceString.replace('$', ''));
      return acc + (isNaN(price) ? 0 : price * item.quantity);
    }, 0);

    // Generate a delivery estimate (3 days from now)
    const estimateDate = new Date();
    estimateDate.setDate(estimateDate.getDate() + 3);
    const options: Intl.DateTimeFormatOptions = { weekday: 'long', month: 'long', day: 'numeric' };
    const deliveryEstimate = estimateDate.toLocaleDateString('en-US', options);

    const newOrder: Order = {
      id: `ORD-${Math.floor(Math.random() * 90000) + 10000}`,
      items: itemsToOrder,
      total: orderTotal,
      date: new Date().toLocaleDateString(),
      deliveryEstimate,
      status: 'Confirmed',
      address,
      tracking: {
        status: 'Order Confirmed',
        location: 'Main Warehouse',
        timestamp: new Date().toLocaleString(),
        updates: [
          { status: 'Order Placed', location: 'Online', time: new Date().toLocaleTimeString(), desc: 'Your order has been received.' },
          { status: 'Payment Verified', location: 'System', time: 'Just now', desc: `Paid via ${paymentMethod}.` },
          { status: 'Confirmed', location: 'Warehouse', time: 'Just now', desc: 'Order is being prepared for dispatch.' }
        ]
      }
    };

    setOrders((prevOrders) => {
      const updatedOrders = [newOrder, ...prevOrders];
      localStorage.setItem('buyeasy_orders', JSON.stringify(updatedOrders));
      return updatedOrders;
    });

    // Only clear main cart if we didn't use a custom items list (like "Buy Now")
    if (!customItems) {
      clearCart();
    }
  };

  const cancelOrder = (orderId: string) => {
    setOrders((prevOrders) => {
      const updatedOrders = prevOrders.filter(order => order.id !== orderId);
      localStorage.setItem('buyeasy_orders', JSON.stringify(updatedOrders));
      return updatedOrders;
    });
  };

  const totalItems = cart.reduce((acc, item) => acc + item.quantity, 0);
  
  const totalPrice = cart.reduce((acc, item) => {
    const priceString = typeof item.price === 'string' ? item.price : '0';
    const price = parseFloat(priceString.replace('$', ''));
    return acc + (isNaN(price) ? 0 : price * item.quantity);
  }, 0);

  return (
    <CartContext.Provider value={{ cart, orders, addToCart, removeFromCart, clearCart, placeOrder, cancelOrder, totalItems, totalPrice }}>
      {children}
    </CartContext.Provider>
  );
}

export function useCart() {
  const context = useContext(CartContext);
  if (context === undefined) {
    throw new Error('useCart must be used within a CartProvider');
  }
  return context;
}
